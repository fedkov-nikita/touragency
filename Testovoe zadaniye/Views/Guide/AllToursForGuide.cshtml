@using Testovoe_zadaniye.Models.Entities;
@model Testovoe_zadaniye.Paginator.Pagin<Tour>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="text-center">
    <div class="container">
        <img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">
    </div>
    <center>
        <div class="col-md-4">
            <p><h1>Tour list</h1></p>

        </div>
    </center>
</section>


<div class="no-background">
    <div class="container">

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item"><a class="page-link" href="/Guide/alltoursforguide?pageNumber=@(Model.PageNumber - 1)">Previous</a></li>
                }

                @for (var i = 1; i <= Model.TotalPages; i++)
                {

                    <li class="page-item @(i == Model.PageNumber ? "active" : "")"><a class="page-link" href="/Guide/alltoursforguide?pageNumber=@i">@i</a></li>

                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item"><a class="page-link" href="/Guide/alltoursforguide?pageNumber=@(Model.PageNumber+1)">Next</a></li>
                }
            </ul>
        </nav>

        <div class="row justify-content-md-center">
            @foreach (var tour in Model.Data)
            {

                <main role="main" class="container">
                    <div class="jumbotron">
                        <h1>@tour.Name</h1>
                        <h3 class="card-title pricing-card-title">@tour.Data </h3>

                        <p class="lead">For additional information about tour contact please contact ZharaTravel LLC.</p>
                        <a class="btn btn-primary btn-lg" href="~/Tour/EditTour/@tour.TourId" role="button">Edit Tour</a>
                        <a class="btn btn-primary btn-lg" asp-action="DeleteTour" asp-controller="Tour" asp-route-id="@tour.TourId" onclick="return confirm ('Are yo sure yo want to delete: @tour.Name')">Delete</a>
                    </div>
                </main>

            }
        </div>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item"><a class="page-link" href="/Guide/alltoursforguide?pageNumer=@(Model.PageNumber - 1)">Previous</a></li>
                }

                @for (var i = 1; i <= Model.TotalPages; i++)
                {

                    <li class="page-item @(i == Model.PageNumber ? "active" : "")"><a class="page-link" href="/Guide/alltoursforguide?pageNumber=@i">@i</a></li>

                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item"><a class="page-link" href="/Guide/alltoursforguide?pageNumber=@(Model.PageNumber+1)">Next</a></li>
                }
            </ul>
        </nav>

        <div class="container">

            <p>

                <a href="~/Tour/AddTour" class="btn btn-primary my-2">Add Tour</a>
                <a href="#" class="btn btn-secondary my-2" onclick="DisplayGoogleMap()">Display Map</a>
                <a href="~/Guide/GuideNAvigation" class="btn btn-secondary my-2">Previous page</a>

            </p>

        </div>



    </div>
</div>


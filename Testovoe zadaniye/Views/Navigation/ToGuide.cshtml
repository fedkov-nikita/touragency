@model IEnumerable<Testovoe_zadaniye.Models.Guide>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var guide in Model)
{
    <img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 shadow-sm">

                    <div class="card-header">

                        <h4 class="my-0 font-weight-normal"> Guide ID: @guide.GuideId</h4>

                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">Name: @guide.Name </h1>
                        <a class="btn btn-primary btn-lg" href="~/Navigation/TouristList" role="button">Go back</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

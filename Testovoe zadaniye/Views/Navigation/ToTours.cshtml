@model IEnumerable<Testovoe_zadaniye.Models.Tour>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">

<div class="row justify-content-md-center">
    @foreach (var tour in Model)
    {
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">@tour.Name</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">@tour.Data </h1>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn btn-primary btn-lg" href="~/Navigation/TouristList" role="button">Go back</a>


@model Testovoe_zadaniye.Models.AddTour

@using (Html.BeginForm("ToTourAdd", "Navigation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-md-center">
        <div class="col-md-3 mb-3">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @required = "" })
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12" >
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm</button>
        </div>
    </div>
}


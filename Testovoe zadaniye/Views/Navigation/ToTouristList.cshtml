@model IEnumerable<Testovoe_zadaniye.Models.Tourist>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Home town</th>
            <th>Fullname</th>
            <th>Age</th>
            <th>Photo</th>
            <th>Tours</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tourist in Model)
        {
            <tr>
                <td>@tourist.Hometown</td>
                <td>@tourist.Fullname</td>
                <td>@tourist.Age</td>
                <td>
                    @if (tourist.Avatar != null)
                    {
                        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(tourist.Avatar))" />
                    }
                </td>
                <td><a class="btn btn-primary btn-lg" href="~/Navigation/ToTours/@tourist.Touristid" role="button">Tours</a></td>
                <td>
                    <a class="btn btn-primary btn-lg" asp-action="Delete" asp-controller="Navigation" asp-route-id="@tourist.Touristid">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

@model IEnumerable<Testovoe_zadaniye.Models.Tour>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">

<div class="row justify-content-md-center">
    @foreach (var tour in Model)
    {
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">@tour.Name</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">@tour.Data </h1>
                </div>
            </div>
        </div>
    }
</div>

<head>
    <script src="https://maps.googleapis.com/maps/api/js?"></script>
</head>
<body>

    <p><center><input type="button" value="Click to Display Map" onclick="DisplayGoogleMap()" /></center></p>

    <p><center><div id="myDiv" style="width:800px;height:600px;"></div></center></p>

    <script type="text/javascript">
        function DisplayGoogleMap() {

            //Set the Latitude and Longitude of the Map
            var myAddress = new google.maps.LatLng(41.3877306, 2.1626061);

            // Section of tours
            //
            var TourOne = new google.maps.LatLng(41.404641, 2.174969);
            //
            var TourTwo = new google.maps.LatLng(41.391798, 2.164656);
            //
            var TourThree = new google.maps.LatLng(41.368319, 2.154031);
            //
            var TourFour = new google.maps.LatLng(41.380574, 2.122917);
            //
            var TourFive = new google.maps.LatLng(41.422757, 2.119255);
            //
            var TourSix = new google.maps.LatLng(41.639508, 2.713662);
            //
            var TourSeven = new google.maps.LatLng(41.363846, 2.167728);
            //
            var TourEight = new google.maps.LatLng(41.385321, 2.180710);
            //
            var TourNine = new google.maps.LatLng(41.613967, 2.654539 );
            //
            var TourTen = new google.maps.LatLng(41.375696, 2.177621);
            //
            var TourEleven = new google.maps.LatLng(41.414397, 2.153142);


            //Create Options or set different Characteristics of Google Map
            var mapOptions = {
                center: myAddress,
                zoom: 10,
                minZoom: 10,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            //Display the Google map in the div control with the defined Options
            var map = new google.maps.Map(document.getElementById("myDiv"), mapOptions);



            var marker = new google.maps.Marker({
                position: myAddress,
                map: map,
                animation: google.maps.Animation.BOUNCE,

            });

            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/red-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourOne,
                map: map
            });

            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourTwo,
                map: map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourThree,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')
            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourFour,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourFive,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourSix,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourSeven,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')
            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourEight,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourNine,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourTen,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: TourEleven,
                map : map
            });
            marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')



            marker.setMap(map);
        }
    </script>
</body>

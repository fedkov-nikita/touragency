@model Testovoe_zadaniye.Paginator.Pagin<Tourist>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <body>

        <header>
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-blue">
                <a class="navbar-brand"><img src="~/images/logo.png" alt="" width="30" height="30">Tourist list</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Navigation/TouristList">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Index">Previous page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="btnReserv">Reserve save</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Navigation/TourList">Tour list</a>
                        </li>

                    </ul>

                    <form method="get">
                        <div class="form-inline mt-2 mt-md-0">

                            <input name="searchString" class="form-control mr-sm-2" aria-label="Name" type="text" placeholder="Name">

                            <input name="age" class="form-control mr-sm-2" aria-label="Age" type="text" placeholder="Age">

                            <input name="homeTown" class="form-control mr-sm-2" aria-label="HomeTown" type="text" placeholder="Home Town">

                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </div>
                    </form>

                </div>
            </nav>
        </header>

        <main role="main">

            <div class="no-background">

                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Home town</th>
                                    <th>Fullname</th>
                                    <th>Age</th>
                                    <th>Photo</th>
                                    <th>Guide</th>
                                    <th>Tours</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tourist in Model.Data)
                                {
                                    <tr>
                                        <td>@tourist.Hometown</td>
                                        <td>@tourist.Fullname</td>
                                        <td>@tourist.Age</td>
                                        <td>
                                            @if (tourist.Avatar != null)
                                            {
                                                <img src="@Url.Content(tourist.Avatar)" width="100" height="100">
                                            }
                                        </td>
                                        <td><a class="btn btn-primary btn-lg" href="~/Navigation/ToGuide/@tourist.GuideId" role="button">Guide</a></td>
                                        <td><a class="btn btn-primary btn-lg" href="~/Navigation/ToTours/@tourist.Touristid" role="button">Tours</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>


                    </div>
                </div>
            </div>

        </main>

        <container>
            <nav aria-label="Page navigation example">
                <ul class="pagination">

                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item"><a class="page-link" href="/Navigation/touristlist?pageNumber=@(Model.PageNumber - 1)">Previous</a></li>
                    }

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {

                        <li class="page-item @(i == Model.PageNumber ? "active" : "")"><a class="page-link" href="/Navigation/touristlist?pageNumber=@i">@i</a></li>

                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item"><a class="page-link" href="/Navigation/touristlist?pageNumber=@(Model.PageNumber+1)">Next</a></li>
                    }

                </ul>
            </nav>
        </container>


        <div class="alert alert-primary" role="alert" id="backupAlert">
            Backup save succesfully!
        </div>
    </body>


<script>
    $('#backupAlert').hide();
    var debounceTimer = null;
    $(document).ready(function () {
        $("#btnReserv").click(function () {
            clearTimeout(debounceTimer);
            $.ajax({

                type: "GET",
                url: "/Admin/Reserver",
                success: function () {

                    $("#backupAlert").show();

                    debounceTimer = setTimeout(function () {
                        $('#backupAlert').hide();
                    }, 4000);
                }

            })

        })

    })

</script>




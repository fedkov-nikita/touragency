
@model Testovoe_zadaniye.DataBase.Addform

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Adding tourist</title>
</head>
<body>
    <div>
        <h3>Add new Torist</h3>
        <p>Enter fields:</p>
        @using (Html.BeginForm("AddTouristform", "Home", FormMethod.Post))
        {

            <table>

                <tr>
                    <td>Hometown:</td>
                    <td> @Html.TextBoxFor(x=>x.Hometown,new {@class ="form-control", @readonly="true"}) </td>
                </tr>
                <tr>
                    <td>Full Name:</td>
                    <td>@Html.TextBoxFor(x => x.Fullname,new {@class ="form-control", @readonly="true"}) </td>
                </tr>
                <tr>
                    <td>Age:</td>
                    <td>@Html.TextBoxFor(x => x.Age,new {@class ="form-control", @readonly="true"})</td>
                </tr>
                <tr>

                    <td>Guide:</td>
                    <td>
                        <select disabled="true" asp-for="GuideId"  asp-items="@(new SelectList(ViewBag.listofitems, "GuideId", "Name"))"></select>
                    </td>
                </tr>




                @for (int i = 0; i < Model.Tours.Count(); i++)
                {
                <tr>
                    <td>
                        @Html.CheckBoxFor(c => c.Tours[i].selected,new { @disabled = "disabled"})
                        @Model.Tours[i].Name
                        @Html.HiddenFor(c => c.Tours[i].Name)
                        @Html.HiddenFor(c => c.Tours[i].Data)
                        @Html.HiddenFor(c => c.Tours[i].TourId)
                    </td>
                </tr>
                }





                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        }
    </div>
</body>
</html>
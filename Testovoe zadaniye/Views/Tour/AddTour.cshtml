@model Testovoe_zadaniye.Models.OperationModels.NewTourForm

    <img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">

    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h3>Please enter new tour</h3>
        </div>
    </div>

@using (Html.BeginForm("AddTour", "Tour", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-md-center">
        <div class="col-md-3 mb-3">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @required = "" })
            @Html.ValidationMessageFor(c => c.Name ,"", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-2">
            <a class="btn btn-primary btn-lg" href="javascript: history.go(-1)" role="button">Previous Page</a>
        </div>
        <div class="col-md-2">

            <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm</button>
        </div>
    </div>
}


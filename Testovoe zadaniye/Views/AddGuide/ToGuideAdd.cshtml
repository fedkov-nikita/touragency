@model Testovoe_zadaniye.Models.AddGuide

@using (Html.BeginForm("ToGuideAdd", "AddGuide", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-md-center">
        <div class="col-md-3 mb-3">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @required = "" })
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-3 mb-3">
            @Html.LabelFor(c => c.Login)
            @Html.TextBoxFor(c => c.Login, new { @class = "form-control", @required = "" })
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-3 mb-3">
            @Html.LabelFor(c => c.Password)
            @Html.TextBoxFor(c => c.Password, new { @class = "form-control", @required = "" })
        </div>
    </div>


    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm</button>
        </div>
    </div>
}


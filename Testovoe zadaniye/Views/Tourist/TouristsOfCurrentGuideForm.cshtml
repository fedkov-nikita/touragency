@model IEnumerable<Testovoe_zadaniye.Models.Tourist>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img class="mb-4" src="~/images/logo.png" alt="" width="100" height="100">

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <p><h1>Tourist list</h1></p>
    </div>
</div>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Home town</th>
            <th>Fullname</th>
            <th>Age</th>
            <th>Photo</th>
            <th>Tours</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tourist in Model)
        {
            <tr>
                <td>@tourist.Hometown</td>
                <td>@tourist.Fullname</td>
                <td>@tourist.Age</td>
                <td>
                    @if (tourist.Avatar != null)
                    {
                        <img src="@Url.Content(tourist.Avatar)" width="100" height="100">
                    }
                </td>
                <td><a class="btn btn-primary btn-lg" href="~/Tour/ToursOfTourist/@tourist.Touristid" role="button">Tours</a></td>
                <td>
                    <a class="btn btn-primary btn-lg" asp-action="Delete" asp-controller="Tourist" asp-route-id="@tourist.Touristid" onclick="return confirm ('Are yo sure yo want to delete: @tourist.Fullname')">Delete</a>
                </td>
                <td><a class="btn btn-primary btn-lg" href="~/Tourist/EditTourist/@tourist.Touristid" role="button">Edit</a></td>
            </tr>
        }

    </tbody>
</table>

<a class="btn btn-primary btn-lg" href="~/Guide/AllGuidesList/" role="button">Back To Guides List</a>
